<h1 class="text-4xl ml-5 pb-7 italic">My Mods</h1>

{{!-- <Modslists @model={{@model}} /> --}}

<article>
{{#each @model.modslists as |modslists|}}
    <div class="flex flex-col" id="modslists">
        <br>
        <ul class="ml-4 text-xl">
            <Imagehandler
            src={{modslists.imagelink}}
            alt="A picture of {{modslists.modname}}"
            />
            <div>
                <h3 class="text-2xl italic">Mod Name: {{modslists.modname}}</h3>
                <br>
                <h3>Release Year: {{modslists.releaseyear}}</h3>
                <br>
                <h3>Game: {{modslists.game}}</h3>
                <br>
                <a class="underline hover:text-gray-500 space-y-4" href="{{modslists.link}}">Download {{modslists.modname}}</a>
            </div>
        </ul>
        <div class="pb-9"></div>
    </div>
{{/each}}
</article>